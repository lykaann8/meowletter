<script>
  // Open letter & play music
  function openLetter(btn) {
    document.getElementById("letter").classList.add("show");
    btn.style.display = "none";
    document.getElementById("music").play();
  }

  // Falling cute icons
  const icons = ["ğŸ±","ğŸ¾","ğŸ’–","ğŸ˜º","ğŸ˜»"];
  function dropIcon() {
    const el = document.createElement("div");
    el.className = "float";
    el.textContent = icons[Math.floor(Math.random() * icons.length)];
    el.style.left = Math.random() * 100 + "vw";
    el.style.animationDuration = (5 + Math.random() * 5) + "s";
    document.body.appendChild(el);
    setTimeout(() => el.remove(), 10000);
  }
  setInterval(dropIcon, 500);

  // PokÃ©mon falling images
  const pokemons = ["images/salamence.png", "images/gengar.png", "images/arcanine.png"];
  function dropPokemon() {
    const img = document.createElement("img");
    img.src = pokemons[Math.floor(Math.random() * pokemons.length)];
    img.style.position = "fixed";
    img.style.top = "-100px";
    img.style.width = 60 + Math.random()*40 + "px";
    img.style.left = Math.random()*90 + "vw";
    img.style.zIndex = 10;
    img.style.animation = "pokeFall " + (6 + Math.random()*4) + "s linear forwards";
    document.body.appendChild(img);
    setTimeout(() => img.remove(), 10000);
  }
  setInterval(dropPokemon, 1000);

  // PokÃ©mon falling animation
  const style = document.createElement('style');
  style.innerHTML = `
    @keyframes pokeFall {
      0% { transform: translateY(0) rotate(0deg); opacity: 1; }
      50% { transform: translateY(50vh) rotate(180deg); opacity: 0.8; }
      100% { transform: translateY(110vh) rotate(360deg); opacity: 0; }
    }
  `;
  document.head.appendChild(style);

  // Closing animation
  window.addEventListener("scroll", () => {
    const letter = document.getElementById("letter");
    const closing = document.getElementById("closing");
    if (!letter) return;
    const scrollBottom = window.scrollY + window.innerHeight;
    const letterBottom = letter.offsetTop + letter.offsetHeight;
    if (scrollBottom >= letterBottom) {
      closing.style.display = "block";
      setTimeout(() => closing.style.opacity = 1, 100);
    } else {
      closing.style.opacity = 0;
      setTimeout(() => closing.style.display = "none", 500);
    }
  });
</script>

